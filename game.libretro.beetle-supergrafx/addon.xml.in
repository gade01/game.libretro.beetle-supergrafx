<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.beetle-supergrafx"
		name="PC Engine SuperGrafx (Beetle SGX)"
		version="0.9.38"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>SGX</platforms>
		<extensions>pce|sgx|cue|ccd|chd</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<supports_keyboard>false</supports_keyboard>
		<supports_mouse>false</supports_mouse>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">PC Engine SuperGrafx (Beetle SGX) v0.9.38.7</summary>
		<description>Source: https://github.com/libretro/beetle-supergrafx-libretro

Supported files: .pce, .sgx, .cue, .ccd, .chd</description>
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<assets>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
		</assets>
	</extension>
</addon>
